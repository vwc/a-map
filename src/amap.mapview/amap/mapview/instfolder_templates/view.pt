<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="amap.mapview">

  <metal:block metal:fill-slot="javascript_head_slot">
    <!--<metal:use metal:use-macro="context/@@collectivegeo-macros/openlayers" />-->
    <script src='http://api.tiles.mapbox.com/mapbox.js/v0.6.6/mapbox.js'></script>
    <link href='http://api.tiles.mapbox.com/mapbox.js/v0.6.6/mapbox.css' rel='stylesheet' />
  </metal:block>

<body>

<metal:main fill-slot="main">
  <metal:content-core define-macro="main">
    <article>
      <h1 class="documentFirstHeading" tal:content="context/Title" />

      <section id="content-core">
        <div class="row">
          <div class="span12" id="venue-map-wrapper">
            <div class="xbox">
              <div data-appui="venuemap"
                  data-appui-target="venue-mapbox"
                  tal:define="context_url context/absolute_url;
                              mapsource python:context_url + '/@@geojson-view'"
                  tal:attributes="data-appui-source mapsource;">
                  <div id="venue-mapbox" class="mapbox-large">
                      <!--MapBox Content -->
                  </div>
              </div>
          </div>
        </div>
    </section>

      <!--<div id="map-wrapper">
        <p><strong>Placeholder div for map content</strong></p>
        <metal:use metal:use-macro="context/@@collectivegeo-macros/map-widget" />
        <script type="text/javascript"
          tal:attributes="src string:++resource++geo.kml.javascripts/kml_openlayers.js">
        </script>
      </div>-->

      <section id="keyword-selector"
        tal:define="keywords view/keywords">
        <ul>
          <tal:keys tal:repeat="key keywords">
            <li tal:define="klass python:view.keyword_normalizer(key)"
              tal:attributes="class klass">
              <a href="#" tal:content="key" 
                 tal:define="context_url context/absolute_url" 
                 tal:attributes="href python:context_url + '/@@view?subject=' + key" />
            </li>
          </tal:keys>
        </ul>
      </section>
    </article>
  </metal:content-core>
</metal:main>

</body>
</html>

